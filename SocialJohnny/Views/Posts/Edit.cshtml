@model SocialJohnny.Models.Post

@{
    ViewBag.Title = "Edit";
}

<h2 style="text-align:center;">Editare Postare</h2>

<style>
    .buttonS {
        background-color: #3891A6; /* Green */
        border: 2px;
        border-style: solid;
        border-color: black;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 15px;
        margin-top: 10px;
        margin-left: 10px;
    }
</style>
<link rel="stylesheet" href="../Content/manual.css">

<div style="text-align:center">
    <form method="post" action="/Posts/Edit/@Model.PostId">
        @Html.HttpMethodOverride(HttpVerbs.Put)
        @Html.Label("Text", "Text postare")
        <br />
        <div>
            @Html.TextArea("Text", Model.Text, new { style = "form-control; width: 300px; height: 100px;" })
        </div>

        @Html.Label("Title", "Titlu postare")
        <br />
        @Html.TextBox("Title", Model.Title, new { style = "form-control; width: 500px;" })
        <br />  

        <button type=" submit" class="buttonS">Modifica postarea</button>


    </form>
</div>